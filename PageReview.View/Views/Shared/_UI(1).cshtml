                var tam2 = [];
                var index = 1;
                $.each(response.result, function (i, v) {
                    if (index < 7) {
                        tam += `<li><a href="/ui/getsbybrand/${v.id}">${v.brandName}</a></li>`;
                        index++;
                    }
                    if (response.result.length == i + 1) {
                        tam2 += (`<div class="column"><ul>
                                                ${tam}
                                            </ul></div>`);
                    }
                    else if (index >= 6) {
                        index = 1;
                        tam2 += (`<div class="column"><ul>
                                                ${tam}
                                            </ul></div>`);
                        tam = '';
                    }
                });
